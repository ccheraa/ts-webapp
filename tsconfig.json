{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSources": true,
		"outDir": "dist",
		"declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ]
	},
	"exclude": [
		"node_modules",
		"src/templates",
		"templates",
		".vscode",
		"index.d.ts",
		"dist"
	]
}